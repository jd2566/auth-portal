{
   "name": "auth-portal",
   "description": "User auth microservice, built with koa framework in typescript",
   "version": "0.0.1",
   "main": "index.js",
   "scripts": {
      "dev": "nodemon src/app.ts",
      "build": "tsc",
      "start:prod": "node dist/app.js",
      "test": "jest --watchAll",
      "typeorm": "typeorm-ts-node-commonjs",
      "start": "ts-node src/index.ts"
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/jd2566/auth-portal.git"
   },
   "author": "jd2566",
   "license": "MIT",
   "bugs": {
      "url": "https://github.com/jd2566/auth-portal/issues"
   },
   "homepage": "https://github.com/jd2566/auth-portal#readme",
   "dependencies": {
      "bcryptjs": "^2.4.3",
      "class-validator": "^0.13.2",
      "dotenv": "^10.0.0",
      "joi": "^17.6.0",
      "koa": "^2.13.3",
      "koa-body": "^4.2.0",
      "koa-context-validator": "^1.0.0",
      "koa-convert": "^2.0.0",
      "koa-helmet": "^6.1.0",
      "koa-jwt": "^4.0.3",
      "koa-morgan": "^1.0.1",
      "koa-router": "^10.1.1",
      "mysql": "^2.14.1",
      "pg": "^8.4.0",
      "ramda": "^0.27.1",
      "reflect-metadata": "^0.1.10",
      "typeorm": "^0.3.6",
      "uuid": "^8.3.2",
      "winston": "^3.3.3"
   },
   "devDependencies": {
      "@types/jest": "^27.4.1",
      "@types/koa": "^2.13.4",
      "@types/koa-helmet": "^6.0.4",
      "@types/koa-morgan": "^1.0.5",
      "@types/koa-router": "^7.4.4",
      "@types/morgan": "^1.9.3",
      "@types/node": "^8.0.29",
      "@types/ramda": "^0.27.45",
      "@types/supertest": "^2.0.11",
      "@types/uuid": "^8.3.1",
      "babel-core": "^6.26.3",
      "babel-jest": "^27.2.5",
      "chai": "^4.3.4",
      "cross-env": "^7.0.3",
      "eslint": "^8.0.0",
      "forever": "^4.0.3",
      "jest": "^27.5.1",
      "mockery": "^2.1.0",
      "nodemon": "^2.0.13",
      "raml2html": "^6.4.2",
      "sinon": "^11.1.2",
      "supertest": "^6.2.2",
      "throng": "^5.0.0",
      "ts-jest": "^27.1.4",
      "ts-node": "^10.7.0",
      "ts-node-dev": "^1.1.8",
      "tslint": "^6.1.3",
      "typescript": "^4.6.3"
   },
   "nodemonConfig": {
      "ts": "ts-node",
      "ignore": [
         "src/tests/**/*"
      ]
   },
   "jest": {
      "moduleFileExtensions": [
         "js",
         "jsx",
         "json",
         "ts",
         "tsx"
      ],
      "collectCoverage": true,
      "collectCoverageFrom": [
         "**/*.{ts,js}",
         "!**/node_modules/**",
         "!**/dist/**",
         "!**/coverage/**"
      ],
      "transform": {
         "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
      },
      "coverageThreshold": {
         "global": {
            "branches": 100,
            "functions": 100,
            "lines": 100,
            "statements": 100
         }
      },
      "coverageReporters": [
         "text",
         "text-summary"
      ],
      "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
      "testPathIgnorePatterns": [
         "/node_modules/",
         "/dist/",
         "/coverage/"
      ]
   }
}
